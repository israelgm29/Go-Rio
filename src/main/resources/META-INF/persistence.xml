<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <!-- Define Persistence Unit -->
  <persistence-unit name="my_persistence_unit" transaction-type="JTA">
    <jta-data-source>java:app/dbconection</jta-data-source>
    <class>com.boot.sys.web.entidaes.Usuario</class>
    <class>com.boot.sys.web.entidaes.Categoria</class>
    <class>com.boot.sys.web.entidaes.Pais</class>
    <class>com.boot.sys.web.entidaes.Lugar</class>
    <class>com.boot.sys.web.entidaes.Adminrol</class>
    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/dbturismo"/>
      <property name="jakarta.persistence.jdbc.user" value="postgres"/>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.password" value="postgres"/>
    </properties>
  </persistence-unit>
</persistence>
